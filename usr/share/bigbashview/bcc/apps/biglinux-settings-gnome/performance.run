#!/bin/bash

# Verifica se os efeitos do Gnome est√£o ativados
checked_performance=$(gsettings get org.gnome.desktop.interface enable-animations)
if [ "$checked_performance" = "false" ]; then
    gsettings set org.gnome.desktop.interface enable-animations true
else
    gsettings set org.gnome.desktop.interface enable-animations false
fi
